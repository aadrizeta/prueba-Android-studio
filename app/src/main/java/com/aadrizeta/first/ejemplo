public class MainActivity extends AppCompatActivity {

    private TextInputLayout password1, password2;
    private EditText editPassword1, editPassword2;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        password1 = findViewById(R.id.password1);
        password2 = findViewById(R.id.password2);
        editPassword1 = findViewById(R.id.edit_password1);
        editPassword2 = findViewById(R.id.edit_password2);

        editPassword1.addTextChangedListener(new TextWatcher() {
            @Override
            public void beforeTextChanged(CharSequence s, int start, int count, int after) {}

            @Override
            public void onTextChanged(CharSequence s, int start, int before, int count) {
                String password = editPassword1.getText().toString();
                String confirmPassword = editPassword2.getText().toString();

                if (!password.equals(confirmPassword)) {
                    password2.setError("Las contrase√±as no coinciden");
                } else {
                    password2.setError(null); // Limpiar el error si coinciden
                }
            }

            @Override
            public void afterTextChanged(Editable s) {}
        });
    }
}